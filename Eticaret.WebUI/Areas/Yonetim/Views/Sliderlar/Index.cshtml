@model IEnumerable<Eticaret.Dto.Slider.SliderListDto>

@{
                /**/

                ViewBag.Title = "Slider";
                ViewBag.Breadcrumb = "<li class='breadcrumb-item active'>Ürünler</li>";
}

<p>
    <a class="btn btn-primary" href=@("/Yonetim/Sliderlar/Edit/")><i class="fas fa-plus"></i> Yeni</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resim.ResimYolu)
        </th>
        <th>İşlem</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resim.ResimYolu)
            </td>
            <td>
                @*<a class="btn btn-sm btn-outline-primary" href=@(String.Format("/Yonetim/Sliderlar/Resimler/{0}",item.Id)) data-toggle="tooltip" title="Düzenle">
                    <i class="fas fa-camera"></i>
                    Resimler
                </a>*@

                <a class="btn btn-sm btn-outline-primary" href=@("/Yonetim/Sliderlar/Edit/"+item.Id) data-toggle="tooltip" title="Düzenle">
                    <i class="fas fa-pencil-alt"></i>
                    Düzenle
                </a>

                <a class="btn btn-sm btn-outline-danger" href=@("/Yonetim/Sliderlar/Delete/" + item.Id) data-toggle="tooltip" title="Sil">
                    <i class="fas fa-trash"></i>
                    Sil
                </a>
            </td>
        </tr>
    }

</table>
